{
  "manifest_version": 3,
  "name": "Historical Context Overlay",
  "version": "1.0",
  "description": "Provides historical context for the content you're reading.",
  "author": "Fahim Firoz",
  "permissions": [
    "activeTab",
    "contextMenus",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "http://localhost:3000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Historical context"
  }
}
